{
  "name": "koa-starter",
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev:build": "node esbuild.config.mjs",
    "dev:node": "node dist/index.js",
    "lint:types": "tsc --preserveWatchOutput",
    "dev": "nodemon",
    "start": "npm run --silent dev",
    "clean": "tsc --build --clean",
    "cleandist": "rm -rf dist"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "@types/koa__router": "^12.0.4",
    "koa": "^2.13.1",
    "koa-logger": "^3.2.1",
    "koa-pino-logger": "^3.0.0",
    "koa-static": "^5.0.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.1",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-static": "^4.0.4",
    "@types/node": "^20.11.16",
    "esbuild": "^0.20.0",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "exec": "npm run --silent dev:build && npm run --silent dev:node",
    "ext": "env,ts,js,json",
    "ignore": [
      "dist/**/*",
      "src/**/*.test.ts"
    ],
    "legacyWatch": true,
    "quiet": true,
    "signal": "SIGTERM",
    "watch": [
      ".env",
      "src"
    ]
  }
}
